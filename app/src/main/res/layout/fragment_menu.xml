<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="diedav.david.diego.fragmentos.MenuFragment"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1">


        <ImageButton
            android:id="@+id/venecia"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/veneciaicon"/>

        <Space style="@style/espacio"/>
        
        <ImageButton
            android:id="@+id/florencia"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/florenciaicon"/>

        <Space style="@style/espacio"/>

        <ImageButton
            android:id="@+id/coliseo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/coliseoicon"/>
    </LinearLayout>

</FrameLayout>
